FROM node:6-alpine
MAINTAINER "Manojvv" "manojv@ilimi.in"
RUN apk update \
   && apk add zip \
   && mkdir -p /opt/content
RUN apk add python make g++
ADD src /opt/content/
WORKDIR /opt/content/
RUN npm i gm
RUN npm install --unsafe-perm
WORKDIR /opt
CMD ["zip", "-r", "content_service.zip", "content"]
